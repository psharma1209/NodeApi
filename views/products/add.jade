extends ../layout

block content
   if error
      p.error=error
   if success
      p.success=success   
   
   form(method='post', name='add-product')
      
            .form-group
                label(for='title') Product Title:
                input#title.form-control(type='text', name="title" value=product ? product.title : "")
            .form-group
                label(for='price') Price:
                input#price.form-control(type='number', name="price" value=product ? product.price : "")
            .form-group
                label(for='stock') Stock:
                input#stock.form-control(type='number', name="stock" value=product ? product.stock : "")
       
            button.btn.btn-success(type='submit') Add